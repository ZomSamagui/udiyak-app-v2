{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "paths": {
      "navigation/*": ["navigation/*"],
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "constants/*": ["constants/*"],
      "hooks/*": ["hooks/*"],
      "lib/*": ["lib/*"],
      "screens/*": ["screens/*"],
      "type/*": ["type/*"],
    }
  },
  "include": [
    "**/*",
    "src/@types/**/*",
    "src/navigation/**/*",
    "src/assets/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/lib/**/*",
    "src/screens/**/*",
    "type/**/*"
  ]
}